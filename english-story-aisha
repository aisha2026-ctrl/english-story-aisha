<h1>The Lost Key</h1>
<p>By: Aisha Batea Alharbi | English Project 2025</p>

<div class="story" id="story">
  <p>You find a mysterious key on your desk. What will you do?</p>
  <button class="option" onclick="nextScene('look')">Look around the room</button>
  <button class="option" onclick="nextScene('leave')">Leave it on the desk</button>
</div>

<script>
function nextScene(choice) {
  const storyDiv = document.getElementById('story');
  if(choice === 'look'){
    storyDiv.innerHTML = `
      <p>You see a locked box in the corner. Do you want to open it?</p>
      <button class="option" onclick="nextScene('open')">Yes, open it</button>
      <button class="option" onclick="nextScene('ignore')">No, ignore it</button>
    `;
  } else if(choice === 'leave'){
    storyDiv.innerHTML = `
      <p>You leave the key. Suddenly, a note appears: "The key is important!" What now?</p>
      <button class="option" onclick="nextScene('look')">Go back and look</button>
      <button class="option" onclick="nextScene('ignore')">Ignore the note</button>
    `;
  } else if(choice === 'open'){
    storyDiv.innerHTML = `<p>Congratulations! You opened the box and found a treasure! ðŸŽ‰</p>`;
  } else if(choice === 'ignore'){
    storyDiv.innerHTML = `<p>You ignored the box. The mystery remains unsolved. ðŸ˜…</p>`;
  }
}
</script>

